<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.header {
		background: #ffffff;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 20px 0;
	}
	@media (max-width: 480px) {
		.nav {
			flex-direction: column;
			display: flex;
			gap: 16px;
		}
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 12px;
		font-size: 24px;
		font-weight: 700;
		color: #1a1a1a;
	}

	.nav-menu {
		display: flex;
		gap: 32px;
		list-style: none;
	}

	.nav-menu a {
		color: #4a5568;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s;
	}

	.nav-menu a:hover {
		color: #0066ff;
	}

	.phone {
		font-weight: 600;
		color: #0066ff;
		text-decoration: none;
		font-size: 18px;
	}

	.hero {
		padding: 80px 0 120px;
		background: linear-gradient(135deg, #f0f7ff 0%, #ffffff 100%);
	}

	.hero .container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
	}

	.hero h1 {
		font-size: 52px;
		line-height: 1.2;
		margin-bottom: 24px;
		color: #1a1a1a;
	}

	.hero-subtitle {
		font-size: 20px;
		color: #4a5568;
		margin-bottom: 32px;
		line-height: 1.5;
	}

	.hero-features {
		display: flex;
		flex-direction: column;
		gap: 16px;
		margin-bottom: 40px;
	}

	.feature-item {
		display: flex;
		align-items: center;
		gap: 12px;
		font-size: 16px;
		font-weight: 500;
	}

	.hero-cta {
		display: flex;
		gap: 16px;
	}

	.btn {
		display: inline-block;
		padding: 16px 32px;
		border-radius: 12px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s;
		border: none;
		cursor: pointer;
		font-size: 16px;
	}

	.btn-primary {
		background: #0066ff;
